  {
    text: "Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit sed stet lorem sit clita duo justo.",
    image: "img/testimonial-1.jpg",
    clientName: "Client Name",
    profession: "Profession",
    delay: "0.1s",
  },
  {
    text: "Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit sed stet lorem sit clita duo justo.",
    image: "img/testimonial-2.jpg",
    clientName: "Client Name",
    profession: "Profession",
    delay: "0.3s",
  },
  {
    text: "Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit sed stet lorem sit clita duo justo.",
    image: "img/testimonial-3.jpg",
    clientName: "Client Name",
    profession: "Profession",
    delay: "0.5s",
  },
];
---

<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
  <div class="container py-5 px-lg-5">
    <p class="section-title text-secondary justify-content-center">
      <span></span>Testimonial<span></span>
    </p>
    <h1 class="text-center mb-5">What Say Our Clients!</h1>
    <div class="owl-carousel testimonial-carousel">
      {
        testimonials.map((testimonial, index) => (
          <div
            key={index}
            class="testimonial-item bg-light rounded my-4"
            data-wow-delay={testimonial.delay}
          >
            <p class="fs-5">
              <i class="fa fa-quote-left fa-4x text-primary mt-n4 me-3" />
              {testimonial.text}
            </p>
            <div class="d-flex align-items-center">
              <img
                class="img-fluid flex-shrink-0 rounded-circle"
                src={testimonial.image}
                alt={testimonial.clientName}
                style={{ width: "65px", height: "65px" }}
              />
              <div class="ps-4">
                <h5 class="mb-1">{testimonial.clientName}</h5>
                <span>{testimonial.profession}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
