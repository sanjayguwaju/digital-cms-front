const teamData = [
  {
    name: "John Doe",
    title: "CEO & Founder",
    image: "/img/team-1.jpg",
    delay: "0.1s",
    socials: {
      facebook: "#",
      twitter: "#",
      instagram: "#",
      linkedin: "#",
    },
  },
  {
    name: "Jessica Brown",
    title: "Web Designer",
    image: "/img/team-2.jpg",
    delay: "0.3s",
    socials: {
      facebook: "#",
      twitter: "#",
      instagram: "#",
      linkedin: "#",
    },
  },
  {
    name: "Tony Johnson",
    title: "SEO Expert",
    image: "/img/team-3.jpg",
    delay: "0.5s",
    socials: {
      facebook: "#",
      twitter: "#",
      instagram: "#",
      linkedin: "#",
    },
  },
];
---

<div class="container-xxl py-5">
  <div class="container py-5 px-lg-5">
    <div class="wow fadeInUp" data-wow-delay="0.1s">
      <p class="section-title text-secondary justify-content-center">
        <span></span>Our Team<span></span>
      </p>
      <h1 class="text-center mb-5">Our Team Members</h1>
    </div>
    <div class="row g-4">
      {
        teamData.map((member, index) => (
          <div
            key={index}
            class="col-lg-4 col-md-6 wow fadeInUp"
            data-wow-delay={member.delay}
          >
            <div class="team-item bg-light rounded">
              <div class="text-center border-bottom p-4">
                <img
                  class="img-fluid rounded-circle mb-4"
                  src={member.image}
                  alt={member.name}
                />
                <h5>{member.name}</h5>
                <span>{member.title}</span>
              </div>
              <div class="d-flex justify-content-center p-4">
                <a class="btn btn-square mx-1" href={member.socials.facebook}>
                  <i class="fab fa-facebook-f" />
                </a>
                <a class="btn btn-square mx-1" href={member.socials.twitter}>
                  <i class="fab fa-twitter" />
                </a>
                <a class="btn btn-square mx-1" href={member.socials.instagram}>
                  <i class="fab fa-instagram" />
                </a>
                <a class="btn btn-square mx-1" href={member.socials.linkedin}>
                  <i class="fab fa-linkedin-in" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

